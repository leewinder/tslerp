{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "rootDir": "src/lib",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "watch": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    }
}
